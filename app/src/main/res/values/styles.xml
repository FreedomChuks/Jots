<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/manrope_regular</item>

        <!-- Window decor -->
        <item name="android:windowLightStatusBar" tools:targetApi="m">@bool/use_light_status</item>
        <item name="android:statusBarColor">@color/transparent</item>

    </style>

    <style name="PinDialogTheme" parent="Theme.MaterialComponents.DialogWhenLarge">
        <item name="android:statusBarColor">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="android:backgroundTint">@color/colorAccent</item>
        <item name="android:windowEnterAnimation">@anim/fragment_fade_enter</item>
        <item name="android:windowAnimationStyle">@anim/fragment_close_exit</item>
    </style>

    <style name="splashScreen" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splashscreen</item>
    </style>


